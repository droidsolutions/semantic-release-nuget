{
  "name": "@droidsolutions-oss/semantic-release-nuget",
  "version": "1.0.3",
  "description": "Semantic Release plugin to create and publish NuGet packages.",
  "main": "dist/index.js",
  "files": [
    "dist/src/*"
  ],
  "scripts": {
    "lint": "eslint --ext ts,js .",
    "build": "tsc",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/droidsolutions/semantic-release-nuget.git"
  },
  "keywords": [
    "semantic",
    "release",
    "semantic-release",
    "plugin",
    "nuget",
    "version"
  ],
  "author": "Stefan IÃŸmer <stefan.issmer@droidsolutions.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/droidsolutions/semantic-release-nuget/issues"
  },
  "homepage": "https://github.com/droidsolutions/semantic-release-nuget#readme",
  "engines": {
    "node": ">=15.14.0"
  },
  "dependencies": {
    "execa": "^5.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "16.1.0",
    "@commitlint/config-conventional": "16.0.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@swc-node/jest": "1.4.3",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.13",
    "@types/semantic-release": "17.2.3",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "eslint": "8.8.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "26.0.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "jest-circus": "27.4.6",
    "lint-staged": "12.3.2",
    "prettier": "2.5.1",
    "semantic-release": "19.0.2",
    "typescript": "4.5.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{ts,js,json,yml,md}": "prettier --write",
    "*.{ts,js}": "eslint --ext .js,.ts"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "lcov",
      "html",
      "text"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc-node/jest",
        {
          "dynamicImport": true
        }
      ]
    },
    "testEnvironment": "node",
    "testMatch": null,
    "testRegex": "test/.*\\.test.ts$",
    "testRunner": "jest-circus/runner"
  }
}
